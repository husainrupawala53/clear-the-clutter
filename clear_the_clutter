import os
folder_path=input("enter the folder you want to change")
extension=input("enter the extension of types of files you want to change")

i=1
for filename in os.listdir(folder_path):
    old_path=os.path.join(folder_path,filename)
    if os.path.isdir(old_path):
        continue
    _,ext=os.path.splitext(filename)
    if ext==extension:
        newfile_name = f"{i}.mp3"
        new_path = os.path.join(folder_path, newfile_name)

        os.rename(old_path, new_path)
        print(f"Renamed: {filename} -> {newfile_name}")
        i += 1  # Increment only after rename
       
